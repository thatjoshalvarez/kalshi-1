<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Kalshi Predictions</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body { background-color: #f8f9fa; }
        .container { max-width: 1200px; }
        .table th, .table td { vertical-align: middle; }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Kalshi Event Predictions</h1>
        <p>Real-time probabilities from Kalshi markets (fetched via public API).</p>
        {% if predictions %}
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Event</th>
                    <th>Market</th>
                    <th>Subtitle</th>
                    <th>Probability (%)</th>
                    <th>Close Time</th>
                    <th>Volume</th>
                    <th>ML Forecast</th>
                </tr>
            </thead>
            <tbody>
                {% for pred in predictions %}
                <tr>
                    <td>{{ pred.event_title }}</td>
                    <td>{{ pred.market_title }}</td>
                    <td>{{ pred.subtitle }}</td>
                    <td>{{ pred.probability }}</td>
                    <td>{{ pred.close_time }}</td>
                    <td>{{ pred.volume }}</td>
                    <td><button class="btn btn-primary btn-sm" onclick="mlPredict('{{ pred.ticker }}')">Predict Future</button></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <p class="text-danger">No data available. Try again later.</p>
        {% endif %}
        <div id="ml-results" class="mt-3"></div>
    </div>
    <script>
        async function mlPredict(ticker) {
            try {
                const response = await fetch('/ml_predict', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ticker})
                });
                const data = await response.json();
                const resultsDiv = document.getElementById('ml-results');
                if (data.error) {
                    resultsDiv.innerHTML = `<p class="text-danger">${data.error}</p>`;
                } else {
                    resultsDiv.innerHTML = `<h4>7-Day Forecast (%): ${data.predictions.join(', ')}</h4>`;
                }
            } catch (error) {
                document.getElementById('ml-results').innerHTML = `<p class="text-danger">Error: ${error.message}</p>`;
            }
        }
    </script>
</body>
</html>
